            "maxLength": 500,
            "minLength": 10,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UpdateEmailAddressRequest": {
        "required": [
          "emailAddress"
        ],
        "type": "object",
        "properties": {
          "emailAddress": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          }
        },
        "additionalProperties": false
      },
      "UpdateFirstNameRequest": {
        "required": [
          "firstName"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 50,
            "minLength": 3,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UpdateLastNameRequest": {
        "required": [
          "lastName"
        ],
        "type": "object",
        "properties": {
          "lastName": {
            "maxLength": 50,
            "minLength": 3,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UpdateNameRequest": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 2,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UpdatePhoneNumberRequest": {
        "type": "object",
        "properties": {
          "phone": {
            "pattern": "^\\+26377\\d{7}$",
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UpdatePriceRequest": {
        "required": [
          "price"
        ],
        "type": "object",
        "properties": {
          "price": {
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "UserProfileCreateUpdate": {
        "required": [
          "dateOfBirth",
          "emailAddress",
          "firstName",
          "lastName"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 50,
            "minLength": 3,
            "type": "string"
          },
          "lastName": {
            "maxLength": 50,
            "minLength": 3,
            "type": "string"
          },
          "emailAddress": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "phone": {
            "pattern": "^\\+26377\\d{7}$",
            "type": "string",
            "nullable": true
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date"
          },
          "currentCity": {
            "minLength": 3,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }

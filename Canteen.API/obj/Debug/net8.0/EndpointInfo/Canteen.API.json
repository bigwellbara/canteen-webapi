  "components": {
    "schemas": {
      "CreateMenuItemRequest": {
        "required": [
          "category",
          "description",
          "name",
          "price",
          "userProfileID"
        ],
        "type": "object",
        "properties": {
          "userProfileID": {
            "minLength": 1,
            "type": "string"
          },
          "name": {
            "maxLength": 100,
            "minLength": 2,
            "type": "string"
          },
          "description": {
            "maxLength": 500,
            "minLength": 10,
            "type": "string"
          },
          "price": {
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "category": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          },
          "imageUrl": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UpdateCurrentCityRequest": {
        "required": [
          "currentCity"
        ],
        "type": "object",
        "properties": {
          "currentCity": {
            "minLength": 3,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UpdateDateOfBirthRequest": {
